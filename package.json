{
  "name": "pete-resume",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:prod": "ng serve --configuration localprod",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "format": "prettier --write \"**/*.{ts,html,css,json}\"",
    "lint": "eslint .",
    "migrations": "ng generate @angular/core:cleanup-unused-imports --no-interactive && ng generate @angular/core:self-closing-tag --no-interactive && ng generate @angular/core:control-flow --no-interactive && ng generate @angular/core:signal-input-migration --no-interactive && ng generate @angular/core:output-migration --no-interactive",
    "emulators": "firebase emulators:start",
    "firestore:deploy:rules": "firebase deploy --only firestore:rules",
    "prepare": "husky",
    "storybook": "ng run pete-resume:storybook",
    "build:storybook": "ng run pete-resume:build-storybook",
    "deploy:storybook": "npm run build:storybook && gh-pages -d storybook-static"
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/cdk": "^20.2.11",
    "@angular/common": "^20.3.9",
    "@angular/compiler": "^20.3.9",
    "@angular/core": "^20.3.9",
    "@angular/fire": "^20.0.1",
    "@angular/forms": "^20.3.9",
    "@angular/platform-browser": "^20.3.9",
    "@angular/router": "^20.3.9",
    "@catppuccin/palette": "^1.7.1",
    "animate.css": "^4.1.1",
    "firebase": "^11.10.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.3.8",
    "@angular/build": "^20.3.8",
    "@angular/cli": "^20.3.8",
    "@angular/compiler-cli": "^20.3.9",
    "@angular/language-server": "^20.3.0",
    "@compodoc/compodoc": "^1.1.32",
    "@storybook/addon-docs": "^9.1.12",
    "@storybook/angular": "^9.1.12",
    "@types/jasmine": "~5.1.0",
    "angular-eslint": "20.5.0",
    "eslint": "^9.37.0",
    "eslint-plugin-storybook": "^9.1.12",
    "gh-pages": "^6.3.0",
    "husky": "^9.1.7",
    "jasmine-core": "~5.8.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lint-staged": "^16.2.4",
    "prettier": "^3.6.2",
    "storybook": "^9.1.12",
    "typescript": "~5.8.2",
    "typescript-eslint": "8.46.0"
  }
}
